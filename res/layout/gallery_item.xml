<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/thumbImage" android:layout_width="match_parent"
        android:scaleType="fitXY"        
        android:layout_height="match_parent"/>
    <ImageView android:id="@+id/iconUploaded" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/nn_upload"/>
    <ImageView android:id="@+id/iconPlay" android:layout_width="wrap_content"               
        android:layout_height="wrap_content" android:layout_centerInParent="true"
        android:src="@drawable/playbutton"/>    
</RelativeLayout>
